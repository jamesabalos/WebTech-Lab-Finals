extends layout

block content
	.container
		.row
			.h1.bookingHeader.text-center CURRENT BOOKING/S
		.col-sm-12
			.row
				.col-sm-2
					.well
						p.text-center
							img.img-circle(src='./images/maleDashboard.png', height='90', width='90', alt='Avatar')
				.col-sm-10
					.well
						p
							i.fa.fa-user
							|  Name:
						p
							i.fa.fa-building
							|  Address:
						p
							i.fa.fa-envelope
							|  Email:
						p
							i.fa.fa-phone
							|   Phone Number:
						p
							i.fa.fa-calendar
							|  Date Started:
						p
							i.fa.fa-check
							|   Date Finished:
						button.btn.btn-success.btn-sm(type='button', data-toggle='modal', data-target='#addServiceDiv') DONE
						#addServiceDiv.modal.fade(role='dialog')
							.modal-dialog
								// Modal content
								.modal-content
									.modal-header
										button.close(type='button', data-dismiss='modal') Ã—
										h4.modal-title Service Done
									.modal-body
										.form-group
											label(for='addService') How much is the total cost?
											input#addService.form-control(type='text')
									.modal-footer
										button.btn.btn-success(type='button') Save
										button.btn.btn-danger(type='button', data-dismiss='modal') Close


